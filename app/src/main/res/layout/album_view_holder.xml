<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:paddingBottom="40dp"
    android:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/album_view_holder_album_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/album_view_holder_album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf=
            "@+id/album_view_holder_album_image"/>

    <TextView
        android:id="@+id/album_view_holder_songs_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf=
            "@+id/album_view_holder_album_name"
        app:layout_constraintLeft_toRightOf=
            "@+id/album_view_holder_album_image"/>

    <TextView
        android:id="@+id/album_view_holder_year_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf=
            "@+id/album_view_holder_songs_count"
        app:layout_constraintLeft_toRightOf=
            "@id/album_view_holder_album_image"/>

    <TextView
        android:id="@+id/album_view_holder_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/album_view_holder_album_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>